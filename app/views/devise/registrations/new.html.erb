<%= render 'devise/layouts/authentication_page' do %>
<% content_for :title do %>
Inscription
<% end %>
<% content_for :form do %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'mt-8 space-y-6') do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

<div class="rounded-md shadow-sm -space-y-px">
  <div>
    <%= f.label :email, class: 'sr-only' %>
    <%= f.email_field :email, autofocus: true, placeholder: 'E-mail', autocomplete: "email", required: true, class: 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 text-sm md:text-lg' %>
  </div>

  <div>
    <%= f.label :password, class: 'sr-only' %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Mot de passe', required: true, class: 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 text-sm md:text-lg' %>
  </div>

  <div>
    <%= f.label :password_confirmation, class: 'sr-only' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirmation du mot de passe', required: true, class: 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 text-sm md:text-lg' %>
  </div>
</div>

<div class="flex items-center justify-between mt-3 mx-1">
  <div class="text-sm">
    <%= link_to 'Se connecter', new_session_path(:user), class: 'font-semibold text-indigo-600 text-sm md:text-lg' %>
  </div>
  <div class="text-sm">
    <%= link_to 'Mot de passe oubliÃ© ?', new_password_path(:user), class: 'font-medium text-indigo-600 text-sm md:text-lg' %>
  </div>
</div>
<%= render partial: 'devise/partials/submit_btn', locals: {submit_text: "S'inscrire"} %>
<% end %>
<% end %>
<% end %>
