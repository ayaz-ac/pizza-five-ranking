<%= render 'devise/layouts/authentication_page' do %>
<% content_for :title do %>
Mot de passe oublié ?
<% end %>
<% content_for :form do %>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), class: 'mt-8 space-y-6') do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

<div class="rounded-md shadow-sm -space-y-px">
  <div>
    <%= f.label :email, class: 'sr-only' %>
    <%= f.email_field :email, autofocus: true, placeholder: 'E-mail', autocomplete: "email", required: true, class: 'appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 text-sm md:text-lg' %>
  </div>
</div>

<div class="flex items-center justify-between mt-3 mx-1">
  <div class="text-sm">
    <%= link_to 'Se connecter', new_session_path(:user), class: 'font-semibold text-indigo-600 text-sm md:text-lg' %>
  </div>
</div>
<%= render partial: 'devise/partials/submit_btn', locals: {submit_text: 'Réinitialiser mon mot de passe'} %>
<% end %>
<% end %>
<% end %>
