<div data-controller="pizza-filter">
  <div class="flex flex-col md:flex-row md:justify-center">
    <%= render partial: 'search_bar' %>
    <%= render partial: 'sauce_filter', locals: { sauces: @sauces }%>
  </div>
  <div class="lg:grid lg:grid-cols-5">
    <div class="hidden lg:flex"></div>
    <div class="lg:flex lg:flex-col lg:items-center lg:min-w-full lg:col-start-2 lg:col-span-3 md:px-3" data-pizza-filter-target="pizzas">
      <% @pizzas.each do |pizza| %>
      <%= render partial: 'pizza_card', locals: { pizza: pizza } %>
      <% end %>
    </div>
    <div class="hidden lg:flex"></div>
  </div>
</div>
