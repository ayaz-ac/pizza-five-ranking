<div class="lg:flex lg:flex-col lg:items-center lg:min-w-full lg:col-start-2 lg:col-span-3 md:px-3">
  <% @pizzas.each do |pizza| %>
  <div class="min-w-full rounded-md shadow-lg overflow-hidden mt-5 lg:max-w-2xl">
    <div class="md:flex">
      <div class="md:flex-shrink-0 bg-gray-50">
        <img class="h-80 w-full object-cover md:h-full md:w-48" src="<%= pizza.img_url %>" alt="<%= pizza.title.downcase %>">
      </div>
      <div class="p-8">
        <div class="uppercase tracking-wide text-sm text-indigo-500 font-semibold"><%= pizza.sauce %></div>
        <span class="block mt-1 text-lg leading-tight font-medium text-black"><%= pizza.title %></span>
        <p class="mt-2 text-gray-500"><%= pizza.composition %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>
